<Window x:Class="Library.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library" 
        xmlns:views="clr-namespace:Library.Views"
        xmlns:vms="clr-namespace:Library.ViewModels"
        mc:Ignorable="d"
        Title="Library" Height="450" Width="800">
    <Grid Margin="20 10">
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:ListBooksViewModel}">
                <views:ListBooksView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:AddBookViewModel}">
                <views:AddBookView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ListOfAuthorsViewModel}">
                <views:ListAuthorsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:AddAuthorViewModel}">
                <views:AddAuthor/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:LoanListViewModel}">
                <views:LoanListView/>
            </DataTemplate>
        </Grid.Resources>
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
